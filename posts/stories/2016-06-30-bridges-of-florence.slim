  = render 'two_pictures', locals: { picture_urls: [ image_url('image-11-800.jpg', image_path), image_url('image-12-800.jpg', image_path) ] }

  .row.inner-top-sm
    .col-md-8.col-sm-9.center-block
      h2.text-center Ponte alla Carraia
      p The Ponte alla Carraia is a five-arched bridge spanning the River Arno and linking the
        district of Oltrarno to the rest of the city of Florence.

  = render 'one_picture', locals: { picture_url: image_url('image-16-1200.jpg', image_path) }

